<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naver.dao.UserMapper">
    <select id="getUser" resultType="User">
        select * from user
    </select>

    <update id="updateImgUrl">
        update user
        set image_url=#{imgUrl}
        where id=#{userId}
    </update>

    <update id="numOfVisit" >
        update user
        set num_of_visit = num_of_visit+1
        where id = #{userId}
    </update>
</mapper>