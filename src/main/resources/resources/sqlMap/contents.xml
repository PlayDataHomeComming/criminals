<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.naver.dao.ContentsMapper">
    <select id="getUserContents" resultType="Contents">
        select * from contents
        where user_id=${userId}
    </select>

    <insert id="insertAttribute">
        insert into contents(user_id,attribute,value)
        values(${userId},"${attribute}","${value}")
    </insert>

    <delete id="deleteAttribute">
        delete from contents
        where attribute="${attribute}" and user_id=${userId}
    </delete>
    <select id="getFreeComment" resultType="FreeComment">
        select *
        from freecomments
    </select>
    <insert id="insertFreeComment">
        insert into freecomments(name,content)
        values ("${name}","${content}")
    </insert>


</mapper>